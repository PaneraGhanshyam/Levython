# 13. PROGRESS BAR WITH UNICODE
# ==============================================================================
say("13. Unicode Progress Bar:")
act show_progress(percent) {
    filled <- int(percent / 10)
    empty <- 10 - filled
    bar <- "["
    for i in range(filled) {
        bar <- bar + "â–ˆ"
    }
    for i in range(empty) {
        bar <- bar + "â–‘"
    }
    bar <- bar + "] " + str(percent) + "%"
    -> bar
}

say(show_progress(0))
say(show_progress(25))
say(show_progress(50))
say(show_progress(75))
say(show_progress(100))
say("")

